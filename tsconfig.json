{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "baseUrl": "src",
    "paths": {
      "mobx-ui-statelets": ["."]
    }
  },
  "include": ["src/**/*", "demo/**/*"],
  "exclude": ["node_modules"]
}
